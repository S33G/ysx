{
  "version": "7.10.2",
  "packages": [
    "packages/*"
  ],
  "command": {
    "publish": {
      "message": "chore(release): publish %s",
      "conventionalCommits": true,
      "yes": false
    },
    "version": {
      "allowBranch": ["main", "master"],
      "conventionalCommits": true,
      "message": "chore(release): version %s"
    }
  },
  "ignoreChanges": [
    "**/*.md",
    "**/*.test.js",
    "**/test/**",
    "**/examples/**"
  ]
}
